{% extends 'base.html.twig' %}

{% block title %}List of all tasks{% endblock %}

{% block body %}
    <div class="card">
        <h5 class="card-header">{{ task.title }}</h5>
        <div class="card-body">
            <p class="card-text">{{ task.text }}</p>
        </div>
        <div class="card-header d-flex justify-content-between">
            <div>
                {% if app.user.id == task.user.id %}
                <p class="card-text">Category: {{ task.category.title }}</p>
            {% endif %}
            </div>
            <div>
                <a class="btn btn-outline-warning float-end" href="{{ path('checklist_edit', {'id': task.id}) }}" role="button">
                    Edit
                </a>
                <a class="btn btn-outline-danger float-end" href="{{ path('checklist_delete', {'id': task.id}) }}" role="button">
                    Delete
                </a>
            </div>
        </div>
    </div>
{% endblock %}
